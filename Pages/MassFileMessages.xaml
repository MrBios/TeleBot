<Page x:Class="TeleBot.Pages.MassFileMessages"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TeleBot.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MassFileMessages">
    <Grid Background="{DynamicResource TgPanelBrush}">
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <RichTextBox x:Name="idsBox" MinHeight="100" MaxWidth="300" HorizontalAlignment="Center" Background="{DynamicResource TgButtonBrush}" Foreground="{DynamicResource TgTextBrush}"/>
            <Label Content="Список ID для отправки" HorizontalAlignment="Center" Foreground="{DynamicResource TgTextSecondaryBrush}"/>
            <Button x:Name="loadMesgsButt" Content="Загрузить сообщения" Click="loadMesgsButt_Click" Margin="0,8,0,0" Style="{StaticResource TgButtonStyle}"/>
            <Label x:Name="loadedLabel" Content="Еще не загружены сообщения" HorizontalAlignment="Center" Foreground="{DynamicResource TgTextSecondaryBrush}"/>
            <CheckBox x:Name="doMediaBox" Content="Прикреплять Медиа-файлы" HorizontalAlignment="Center" Margin="0,10,0,20" Foreground="{DynamicResource TgTextBrush}"/>
            <Button x:Name="sendButt" Content="Отправить" Click="sendButt_Click" Margin="0,8,0,0" Style="{StaticResource TgButtonStyle}"/>
        </StackPanel>
    </Grid>
</Page>
